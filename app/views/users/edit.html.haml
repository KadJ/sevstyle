- provide(:title, "Edit user")

%h1 Update your profile
.row
  .creat_form
    = simple_form_for(@user) do |f|

      = render 'shared/error_messages'

      = f.input :name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation

      = f.submit "Save changes", class: "btn btn-large btn-primary"