- provide(:title, 'Sign up')

%h1 Sign up
.row
  .creat_form
    = simple_form_for(@user) do |f|

      = render 'shared/error_messages'

      = f.input :name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation

      = f.submit "Create my account", class: "btn btn-large btn-primary"